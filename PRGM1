CREATE TABLE BRANCH(BRANCHID VARCHAR(10) PRIMARY KEY,BNAME CHAR(20) NOT NULL,HOD VARCHAR(20) NOT NULL);

CREATE TABLE STUDENT(USN VARCHAR(20) PRIMARY KEY, NAME CHAR(20) NOT NULL,ADDRESS VARCHAR(50) NOT NULL,BRANCHID VARCHAR(20) NOT NULL,SEM CHAR(10) NOT NULL);

CREATE TABLE AUTHOR(ATHRID VARCHAR(20) PRIMARY KEY, ATHRNAME CHAR(20) NOT NULL,COUNTRY CHAR(20) NOT NULL,AGE INT(4) NOT NULL);

CREATE TABLE BORROW(USN VARHAR(20) NOT NULL,BID VARCHAR(20) NOT NULL, BNAME VARCHAR(20) NOT NULL,ATHRID VARCHAR(20) NOT NULL,PUBLIHR VARCHAR(15) NOT NULL);

ALTER TABLE BOOK ADD FOREIGN KEY (BRANCHID) REFERENCES BRANCH(BRANCHID);

